@model HistoryRate
<div class="modal fade" id="addRate" tabindex="-1" role="dialog" aria-labelledby="addupdatemodal" style="padding-right: 17px;">
    <div class="updat-modal modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header common-bg rounded-0">
                <h5 class="modal-title h4 color-white md-font" id="addupdatemodal">Add Update</h5>
                <button type="button" class="close color-white" data-dismiss="modal" aria-label="Close">
                    <span class="color-white" aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="Create" asp-controller="HistoryRate">
                <table>
                    <tbody>
                            <tr>
                                <td class="sym-mod-lef text-left pb-2 pr-3"> <label for="" class="sm-font mb-0">SymbolName</label><span class="pl-rgt pr-2" style="float: right;">:</span></td>
                                <td class="sym-mod-right pb-2">
                                    <select id="txtsymbol" asp-for="symbolName">
                                        <option value="GOLDFUTURE">GOLD FUTURE</option>
                                        <option value="SILVERFUTURE">SILVER FUTURE</option>
                                        <option value="GOLDSPOT">GOLD SPOT</option>
                                        <option value="SILVERSPOT">SILVER SPOT</option>
                                    </select>
                                </td>
                            </tr>
                        <tr>
                                <td class="sym-mod-lef text-left pb-2 pr-3"> <label for="" class="sm-font mb-0">OpenRate</label><span class="pl-rgt pr-2" style="float: right;">:</span></td>
                                <td class="sym-mod-right pb-2"><input asp-for="openRate" type="text" class="input-height sm-font"></td>
                        </tr>
                        <tr>
                                <td class="sym-mod-lef text-left pb-2 pr-3"> <label for="" class="sm-font mb-0">CloseRate</label><span class="pl-rgt pr-2" style="float: right;">:</span></td>
                                <td class="sym-mod-right pb-2"><textarea asp-for="closeRate" cols="26" rows="4" class="sm-font p-1"></textarea></td>
                        </tr>
                            <tr>
                                <td class="sym-mod-lef text-left pb-2 pr-3"> <label for="" class="sm-font mb-0">HighRate</label><span class="pl-rgt pr-2" style="float: right;">:</span></td>
                                <td class="sym-mod-right pb-2"><input asp-for="highRate" type="text" class="input-height sm-font"></td>
                            </tr>
                            <tr>
                                <td class="sym-mod-lef text-left pb-2 pr-3"> <label for="" class="sm-font mb-0">LowRate</label><span class="pl-rgt pr-2" style="float: right;">:</span></td>
                                <td class="sym-mod-right pb-2"><textarea asp-for="lowRate" cols="26" rows="4" class="sm-font p-1"></textarea></td>
                            </tr>
                            <tr>
                                <td class="sym-mod-lef text-left pb-2 pr-3"> <label for="" class="sm-font mb-0">Date</label><span class="pl-rgt pr-2" style="float: right;">:</span></td>
                                <td class="sym-mod-right pb-2"><input type="date" name="historyDate" id="historyDate" class="text-left" value="@DateTime.Today.ToString("yyyy-MM-dd")"></td>

                            </tr>

                    </tbody>
                </table>
                <div class="btn-sub text-center">
                    <button class="btn common-bg sm-font">Submit</button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>